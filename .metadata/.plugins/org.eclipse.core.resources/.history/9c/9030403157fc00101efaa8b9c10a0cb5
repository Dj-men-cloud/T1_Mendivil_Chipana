package org.cibertec.model;

import java.io.Serializable;
import java.sql.Date;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.Id;
import jakarta.persistence.Table;

import lombok.Getter;
import lombok.Setter;


@Getter
@Setter
@Entity
@Table(name="inventario")


public class Inventario implements Serializable{
	private static final long serialVersionUID = 1L;
	
	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	@Column(name="nro_inventario")
	private int nroInventario;
	
	private Date fecha;
	
	@ManyToOne
	@JoinColumn(name="id_producto")
	private Producto idProducto;
	
	
	@Column (name="costo_ingreso")
	private String costoIngreso;
	
	@Column (name="motivo_ingreso")
	private double motivoIngreso;
	
	
	@Override
	public String toString() {
		return nroInventario + " - " + fecha + "-" + idProducto+ "-" + costoIngreso +"-" + motivoIngreso;
	}


}
